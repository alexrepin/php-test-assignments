{
  "type": "project",
  "license": "proprietary",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=8.2",
    "ramsey/uuid": "^4.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "mockery/mockery": "1.6.12",
    "phpstan/phpdoc-parser": "1.32.0",
    "phpstan/phpstan": "2.0.2",
    "vimeo/psalm": "5.26.1",
    "symplify/coding-standard": "12.2.3",
    "symplify/easy-coding-standard": "12.3.5"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    },
    "sort-packages": true,
    "secure-http": false
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "API\\": "lib/api/",
      "Common\\": "lib/common/",
      "Storage\\": "lib/storage/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ]
  }
}
